#!/bin/bash
#Ввод имени пользователя
echo -e "Введите имя пользователя"
read username
sleep 1
echo "Вы ввели $username"
sleep 1
#Проверка существования домашней папки указанного пользователя и удаление пустой папки
#Т.к. ls -a выводит "." и ".." и учитывает их как значения, тогда проверка будет =2
result=`ls -a /home/$username | wc -l`
 if [ "$result" = "2" ]; then
echo "В течении 5 секунд удаляем пустую папку пользователя $username . Для отмены удаления нажмите Ctrl+C "
sleep 5
rmdir /home/$username
 else
  echo "Папка не пуста"
fi

